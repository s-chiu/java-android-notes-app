<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.simon.quicknotes.MainActivity">

    <TextView
        android:layout_height="40dp"
        android:id="@+id/Last_Update_Info"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/Last_Update"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/Last_Update"
        app:layout_constraintTop_toTopOf="@+id/Last_Update"
        app:layout_constraintVertical_bias="0.0"
        android:layout_width="180dp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="346dp"
        android:layout_height="418dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/Notes"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        android:hint="@string/Notes_Hint"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:gravity="top|left"
        android:scrollbars = "vertical"
        android:windowSoftInputMode="adjustPan"
        android:isScrollContainer="false"
        />

    <TextView
        android:text="@string/Last_Update"
        android:id="@+id/Last_Update"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>
